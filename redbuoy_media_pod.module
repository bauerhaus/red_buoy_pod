  /**
 * Implements hook_entity_presave().
 */
function redbuoy_media_pod_entity_presave(\Drupal\Core\Entity\EntityInterface $entity) {
  if ($entity->getEntityTypeId() === 'node' && $entity->bundle() === 'podcast_episode') {

    $fields_to_clean = [
      'field_podcast_author',
      'field_podcast_descp',
      'field_podcast_duration',
      'field_podcast_keywords',
      'field_podcast_subtitle',
    ];

    foreach ($fields_to_clean as $field) {
      if (!$entity->hasField($field)) {
        continue;
      }

      $value = $entity->get($field)->value ?? null;

      if ($value !== null) {
        $cleaned = \Drupal\redbuoy_media_pod\FeedTextSanitizer::sanitizeAscii($value);
        if ($field === 'field_podcast_descp') {
          $entity->set($field, [
            'value' => $cleaned,
            'format' => $entity->get($field)->format,
          ]);
        } else {
          $entity->set($field, $cleaned);
        }
      }
    }

    \Drupal::logger('redbuoy_media_pod')->notice('Entity presave sanitizer ran for node ID ' . $entity->id());
  }
}



/**
 * Get a human label for a feed id.
 *
 * Falls back to ucfirst(feed id) if no configured label is found.
 */
function redbuoy_media_pod_feed_label(string $feed_id): string {
  $feed_id = trim($feed_id);
  if ($feed_id === '') {
    return '';
  }

  // If you have per-feed config objects, try them first.
  $cfg = \Drupal::config("redbuoy_media_pod.settings.$feed_id");

  // Use whatever key you actually store the title under.
  foreach (['title', 'podcast_title', 'name', 'label'] as $key) {
    $val = $cfg->get($key);
    if (is_string($val) && trim($val) !== '') {
      return trim($val);
    }
  }

  // Safe fallback.
  return ucfirst(str_replace('_', ' ', $feed_id));
}
